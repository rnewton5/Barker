@model ChangeUserNameViewModel
@{
    ViewData["Title"] = "Change username";
}
@Html.Partial("_Navbar", Model.PostVm)
@Html.Partial("_ManageNav")
<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", TempData["Status"])
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentUserName"></label>
                <input asp-for="CurrentUserName" class="form-control" readonly="readonly"/>
                <span asp-validation-for="CurrentUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUserName"></label>
                <input asp-for="NewUserName" class="form-control" />
                <span asp-validation-for="NewUserName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Update Username</button>
        </form>
    </div>
</div>

