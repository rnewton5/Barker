@inject SignInManager<BarkerUser> SignInManager
@inject UserManager<BarkerUser> UserManager

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <img class="navbar-brand" src="http://www.dog-paw-print.com/wp-content/uploads/paw-new-300w-e1436628930806.png" alt="Barker">
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="nav-active active">
          <a  asp-area="" asp-controller="Home" asp-action="Index">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
          </a>
        </li>
        <li>
          <a  asp-area="" asp-controller="Home" asp-action="About">
            <span class="glyphicon glyphicon-book" aria-hidden="true"></span> About
          </a>
        </li>
        <li>
          <a  asp-area="" asp-controller="Home" asp-action="Notifications">
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Notifications
          </a>
        </li>
        <li>
          <a  asp-area="" asp-controller="Home" asp-action="Messages">
            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Messages
          </a>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <form asp-area="" asp-controller="Home" asp-action="Search" method="get" class="navbar-form" role="search">
            <div class="input-group add-on">
              <input class="form-control" placeholder="Search" name="search_string" id="srch-term" type="text">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </li>
        <li>
        <div class="dropdown">
          <a class="btn btn-secondary dropdown-toggle settings" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user thumbnail hoverable" aria-hidden="true"></span>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
            <li role="presentation"><a role="menuitem" tabindex="-1" asp-area="" asp-controller="Home" asp-action="Profile">Hello @UserManager.GetUserName(User)!</a></li>
            <li role="presentation" class="divider"></li>
            <li role="presentation"><a role="menuitem" tabindex="-1" asp-area="" asp-controller="Account" asp-action="Manage">Settings</a></li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" >
              <li role="presentation"><button class="dropdown-button" type="submit">Log out</button></li>
            </form>
          </ul>
        </div> 
        </li>
        <li><button class="btn btn-md btn-info navbar-btn" type="button" data-toggle="modal" data-target="#barkModal">Bark</button></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<div class="modal fade" id="barkModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Compose a new Bark</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea placeholder="Enter your Bark here!"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Bark</button>
      </div>
    </div>
  </div>
</div>